<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.048">

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Avatar de perfil"
                android:layout_marginLeft="7.5dp"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hola"
                android:layout_marginLeft="7.5dp" />

            <TextView
                android:id="@+id/eliminar"
                android:layout_marginLeft="7.5dp"
                android:text="Eliminar"
                android:textAlignment="textEnd"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="14dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/uno"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="7.5dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/uno" />

            <ImageView
                android:id="@+id/dos"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="7.5dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/dos" />

            <ImageView
                android:id="@+id/tres"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="7.5dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/tres" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/cuatro"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="7.5dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/cuatro" />

            <ImageView
                android:id="@+id/cinco"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="7.5dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/cinco" />

            <ImageView
                android:id="@+id/seis"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="7.5dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/seis" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/siete"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="7.5dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/siete" />

            <ImageView
                android:id="@+id/ocho"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="7.5dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/ocho" />

            <ImageView
                android:id="@+id/nueve"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="7.5dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/nueve" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/diez"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="7.5dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/diez" />

            <ImageView
                android:id="@+id/once"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="7.5dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/once" />

            <ImageView
                android:id="@+id/doce"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="7.5dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/doce" />
        </TableRow>

    </TableLayout>

</LinearLayout>